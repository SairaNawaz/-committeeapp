<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/appBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/yellow"
        android:padding="@dimen/_7sdp"
        android:text="Alert!" />

    <com.apponative.committee_app.ui.custom.JustifyTextView
        android:id="@+id/dialog_message"
        style="@style/bodyStyleNormal3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_title"
        android:text="some messagesome messagesome messagesome messagesome messagesome messagesome messagesome message" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_message"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_btn1"
            style="@style/generalButtonStyle"
            android:layout_below="@+id/dialog_message"
            android:text="Cancel" />

        <TextView
            android:id="@+id/dialog_btn2"
            style="@style/generalButtonStyle"
            android:text="Ok" />


    </LinearLayout>
</RelativeLayout>