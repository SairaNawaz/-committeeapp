<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/topbar"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp">


    <ImageView
        android:id="@+id/footer_icon1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/footer_contacts"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="33%" />

    <ImageView
        android:id="@+id/footer_icon2"
        android:layout_toRightOf="@+id/footer_icon1"
        android:src="@drawable/icon_home"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="33%" />

    <ImageView
        android:id="@+id/footer_icon3"
        android:layout_toRightOf="@+id/footer_icon2"
        android:src="@drawable/footer_calculator"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="33%" />


</android.support.percent.PercentRelativeLayout>