<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_16sdp">

    <EditText
        android:id="@+id/cal_val1"
        style="@style/inputItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/total_slots"
        android:inputType="number" />

    <EditText
        android:id="@+id/cal_val2"
        style="@style/inputItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cal_val1"
        android:hint="@string/total_amount"
        android:inputType="number" />

    <TextView
        android:id="@+id/calculate"
        style="@style/generalButtonStyle"
        android:layout_below="@+id/cal_val2"
        android:layout_centerHorizontal="true"
        android:text="Calculate" />

    <TextView
        android:id="@+id/cal_result"
        style="@style/bodyStyleBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calculate"
        android:text="Amount to be paid" />
</RelativeLayout>
