<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_7sdp"
    android:background="@color/white">

    <!-- Admin Value-->
    <TextView
        android:id="@+id/committee_admin"
        style="@style/bodyStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/admin" />

    <TextView
        android:id="@+id/committee_admin_val"
        style="@style/bodyStyleNormal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/committee_admin"
        android:text="@string/admin" />

    <View
        android:id="@+id/divider_1"
        style="@style/dividerStyle"
        android:layout_below="@+id/committee_admin" />
    <!-- Title Value-->
    <TextView
        android:id="@+id/committee_title"
        style="@style/bodyStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_1"
        android:text="@string/committee_title" />

    <TextView
        android:id="@+id/committee_title_val"
        style="@style/bodyStyleNormal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider_1"
        android:text="@string/admin" />

    <View
        android:id="@+id/divider_2"
        style="@style/dividerStyle"
        android:layout_below="@+id/committee_title" />

    <!-- Total Slots/Members-->
    <TextView
        android:id="@+id/committee_slots"
        style="@style/bodyStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_2"
        android:text="@string/total_slots" />

    <TextView
        android:id="@+id/committee_slots_val"
        style="@style/bodyStyleNormal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider_2"
        android:text="10" />

    <View
        android:id="@+id/divider_3"
        style="@style/dividerStyle"
        android:layout_below="@+id/committee_slots" />
    <!-- Total Amount-->
    <TextView
        android:id="@+id/total_amount"
        style="@style/bodyStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_3"
        android:text="@string/total_amount" />

    <TextView
        android:id="@+id/total_amount_val"
        style="@style/bodyStyleNormal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider_3"
        android:text="7" />

    <View
        android:id="@+id/divider_4"
        style="@style/dividerStyle"
        android:layout_below="@+id/total_amount" />


    <RelativeLayout
        android:id="@+id/invites_cal_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_4">
        <!-- Invites Accepted -->
        <TextView
            android:id="@+id/invites_accepted"
            style="@style/bodyStyleBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invites_accepted" />

        <TextView
            android:id="@+id/invites_accepted_val"
            style="@style/bodyStyleNormal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="7" />

        <View
            android:id="@+id/divider_5"
            style="@style/dividerStyle"
            android:layout_below="@+id/invites_accepted" />

        <!-- Invites Remaining-->
        <TextView
            android:id="@+id/invites_remaining"
            style="@style/bodyStyleBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_5"
            android:text="@string/remaining_invites" />

        <TextView
            android:id="@+id/invites_remaining_val"
            style="@style/bodyStyleNormal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/divider_5"
            android:text="7" />

        <View
            android:id="@+id/divider_6"
            style="@style/dividerStyle"
            android:layout_below="@+id/invites_remaining" />
    </RelativeLayout>

    <!-- Amount Per Month -->
    <TextView
        android:id="@+id/payment_per_member"
        style="@style/bodyStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invites_cal_area"
        android:text="@string/payment__per_month" />

    <TextView
        android:id="@+id/payment_per_member_val"
        style="@style/bodyStyleNormal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/invites_cal_area"
        android:text="10,000" />

    <View
        android:id="@+id/divider_7"
        style="@style/dividerStyle"
        android:layout_below="@+id/payment_per_member" />
    <!-- Currency  -->
    <TextView
        android:id="@+id/currency"
        style="@style/bodyStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_7"
        android:text="@string/currency" />

    <TextView
        android:id="@+id/currency_val"
        style="@style/bodyStyleNormal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider_7"
        android:text="PKR" />

    <View
        android:id="@+id/divider_8"
        style="@style/dividerStyle"
        android:layout_below="@+id/currency" />


    <!-- Start Date  -->
    <TextView
        android:id="@+id/start_date"
        style="@style/bodyStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_8"
        android:text="@string/start_date" />

    <TextView
        android:id="@+id/start_date_val"
        style="@style/bodyStyleNormal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider_8"
        android:text="Mar 14, 2018" />

    <View
        android:id="@+id/divider_9"
        style="@style/dividerStyle"
        android:layout_below="@+id/start_date" />


    <!-- End Date  -->
    <TextView
        android:id="@+id/end_date"
        style="@style/bodyStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_9"
        android:text="@string/end_date" />

    <TextView
        android:id="@+id/end_date_val"
        style="@style/bodyStyleNormal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider_9"
        android:text="Mar 14, 2018" />

    <View
        android:id="@+id/divider_10"
        style="@style/dividerStyle"
        android:layout_below="@+id/end_date" />
    <!-- Collection Interval  -->
    <TextView
        android:id="@+id/collect_interval"
        style="@style/bodyStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_10"
        android:text="@string/committee_interval" />

    <TextView
        android:id="@+id/collect_interval_val"
        style="@style/bodyStyleNormal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider_10"
        android:layout_marginBottom="@dimen/_50sdp"
        android:text="10" />

    <View
        android:id="@+id/divider_11"
        style="@style/dividerStyle"
        android:layout_below="@+id/collect_interval" />


    <!-- Collection Date  -->
    <TextView
        android:id="@+id/collect_date"
        style="@style/bodyStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_11"
        android:text="@string/collection_date" />

    <TextView
        android:id="@+id/collect_date_val"
        style="@style/bodyStyleNormal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider_11"
        android:layout_marginBottom="@dimen/_50sdp"
        android:text="10" />

    <View
        android:id="@+id/divider_12"
        style="@style/dividerStyle"
        android:layout_below="@+id/collect_date" />

    <!-- Collection Mode  -->
    <TextView
        android:id="@+id/collection_mode"
        style="@style/bodyStyleBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_12"
        android:layout_toLeftOf="@+id/collection_mode_val"
        android:text="@string/payment_collection_mode" />

    <TextView
        android:id="@+id/collection_mode_val"
        style="@style/bodyStyleNormal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider_12"
        android:layout_marginBottom="@dimen/_50sdp"
        android:text="@string/collection_admin" />


    <View
        android:id="@+id/divider_13"
        style="@style/dividerStyle"
        android:layout_below="@+id/collection_mode" />
    <!-- Draw Mode  -->
    <TextView
        android:id="@+id/draw_mode"
        style="@style/bodyStyleBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_13"
        android:layout_toLeftOf="@+id/draw_mode_val"
        android:text="@string/draw_mode" />

    <TextView
        android:id="@+id/draw_mode_val"
        style="@style/bodyStyleNormal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/draw_mode"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider_13"
        android:text="@string/random_draw" />

    <View
        android:id="@+id/divider_14"
        style="@style/dividerStyle"
        android:layout_below="@+id/draw_mode" />
</RelativeLayout>