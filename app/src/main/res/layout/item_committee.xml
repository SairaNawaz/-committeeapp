<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/frame">

    <ImageView
        android:id="@+id/committee_icon"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_5sdp"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/committee_title"
        style="@style/bodyStyleBold1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/committee_icon"
        android:text="Committee App"/>

    <TextView
        android:id="@+id/committee_members"
        style="@style/bodyStyleGray3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/committee_title"
        android:layout_toRightOf="@+id/committee_icon"
        android:text="Members 1000" />

    <TextView
        android:id="@+id/committee_amount"
        style="@style/bodyStyleGray3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/committee_members"
        android:layout_toRightOf="@id/committee_icon"
        android:text="Rs. 10000" />
</RelativeLayout>