<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/frame"
    android:padding="@dimen/_5sdp">

    <TextView
        android:id="@+id/member_turn"
        style="@style/bodyStyleBold1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="1."
        android:textStyle="bold"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/turn_date"
        style="@style/bodyStyleGray2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPhoneNumber"
        android:gravity="center"
        android:text="Payment Date: 18/3/17" />
    <ImageView
        android:id="@+id/ivContactImage"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:src="@drawable/placeholder" />


    <TextView
        android:id="@+id/tvContactName"
        style="@style/bodyStyleBold1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivContactImage"
        android:gravity="center"
        android:text="Muhammad Arsalan Saeed" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        style="@style/bodyStyleGray3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvContactName"
        android:gravity="center"
        android:text="+923004441415" />

</RelativeLayout>