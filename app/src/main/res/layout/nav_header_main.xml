<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_5sdp"
    android:background="@drawable/line">

    <ImageView
        android:id="@+id/nav_profileimage"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:src="@drawable/placeholder" />

    <ImageView
        android:id="@+id/nav_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nav_profileimage"
        android:layout_toRightOf="@+id/nav_profileimage"
        android:src="@drawable/icon_edit" />

    <TextView
        android:id="@+id/nav_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_profileimage"
        android:layout_margin="@dimen/_10sdp"
        android:text="ABC Profile"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

</RelativeLayout>
