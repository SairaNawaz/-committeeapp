<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            style="@style/appBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@color/yellow"
            android:padding="@dimen/_7sdp"
            android:text="Passcode" />

        <com.apponative.committee_app.ui.custom.JustifyTextView
            android:id="@+id/dialog_message"
            style="@style/bodyStyleBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter 4 digits Passcode" />

        <EditText
            android:id="@+id/input_passcode"
            style="@style/inputItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:hint="Enter Passcode"
            android:inputType="numberPassword"
            android:maxLength="4" />

        <EditText
            android:id="@+id/input_confirmpasscode"
            style="@style/inputItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:hint="Confirm Passcode"
            android:inputType="numberPassword"
            android:maxLength="4" />

        <LinearLayout
            android:id="@+id/buttons_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_btn1"
                style="@style/generalButtonStyle"
                android:layout_below="@+id/dialog_message"
                android:text="Cancel" />

            <TextView
                android:id="@+id/dialog_btn2"
                style="@style/generalButtonStyle"
                android:text="Enter" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>